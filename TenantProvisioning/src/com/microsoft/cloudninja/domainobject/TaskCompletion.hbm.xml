<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.microsoft.cloudninja.domainobject.TaskCompletion" table="TASKCOMPLETION">
	        <id name="id" type="int">
	            <column name="Id" />
	            <generator class="identity" />
	        </id>
	        <property name="taskName" type="java.lang.String">
	            <column name="TaskName" />
	        </property>
	        <property name="completionTime" type="java.util.Date" insert="false">
	            <column name="CompletionTime" />
	        </property>
	        <property name="elapsedTime" type="java.lang.Double">
	            <column name="ElapsedTime" />
	        </property>
	        <property name="details" type="java.lang.String">
	            <column name="Details" />
	        </property>
	</class>
</hibernate-mapping>
