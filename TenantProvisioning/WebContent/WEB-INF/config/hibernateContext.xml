<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
       
       <!-- Hibernate session factory -->
		<import resource="dbContext.xml"/>
				
		<bean id="SessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
  			<property name="dataSource" ref="dataSource" /> 
			<property name="annotatedClasses">
				<list>
	  				    <value>com.persistent.cloudninja.domainobject.TaskScheduleEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.MeteringEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.TenantIdMasterEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.ProvisioningLogEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.TenantEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.KpiValueTempEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.RoleEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.RoleInstancesEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.DataServerEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.TenantDataConnectionEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.IdentityProviderEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.StorageBandwidthBatchEntity</value>
	  				    <value>com.persistent.cloudninja.domainobject.StorageAnalyticsLogsSummaryEntity</value>
	  			</list>
  			</property>
  			<property name="mappingDirectoryLocations">
				<list>                  
				<value>classpath:com/persistent/cloudninja/domainobject/</value>
				</list>
			</property>
			<property name="hibernateProperties">
				<props>
  					<prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop> 
  					<prop key="hibernate.show_sql">true</prop> 
  					<prop key="hibernate.hbm2ddl.auto">update</prop> 
  				</props>
  			</property>
  		</bean>
  		
  		<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
  			<property name="sessionFactory" ref="SessionFactory"></property>
  		</bean>
  	
</beans>
